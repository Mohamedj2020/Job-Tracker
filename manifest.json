{
  "manifest_version": 3,
  "name": "Job Matcher",
  "version": "1.0",
  "description": "Automatically scrape job postings and match them with your resumes",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://*.workday.com/*",
    "https://*.greenhouse.io/*",
    "https://*.lever.co/*",
    "https://*.indeed.com/*",
    "https://*.glassdoor.com/*",
    "https://*.ziprecruiter.com/*",
    "https://*.monster.com/*",
    "https://*.careers.rtx.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/*",
        "https://*.workday.com/*",
        "https://*.greenhouse.io/*",
        "https://*.lever.co/*",
        "https://*.indeed.com/*",
        "https://*.glassdoor.com/*",
        "https://*.ziprecruiter.com/*",
        "https://*.monster.com/*",
        "https://*.careers.rtx.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
  
  